<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>
    <Description>Shared functions library for Exprelsior, a cross-platform .NET Standard library that dynamically generates lambda expressions from pure text.</Description>
    <Product>Exprelsior</Product>
    <Authors>Alexandre Murari Junior (alexmurari)</Authors>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>alpha-1</VersionSuffix>
    <VersionSuffix Condition=" '$(Configuration)' == 'Debug' ">$(VersionSuffix)-dev</VersionSuffix>
    <PackageIconUrl>https://user-images.githubusercontent.com/11204378/67627094-43b9a480-f82c-11e9-95f3-1ae8cc008631.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/alexmurari/Exprelsior/</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>D:\Projects\Exprelsior\Exprelsior.Shared\Exprelsior.Shared.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Extensions\" />
  </ItemGroup>

</Project>